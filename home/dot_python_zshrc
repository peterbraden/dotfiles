# Python is messy.
#
export PYENV_ROOT="$HOME/.pyenv"
command -v pyenv >/dev/null || export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"

export C_INCLUDE_PATH=/opt/homebrew/Cellar/librdkafka/1.9.1/include
export LIBRARY_PATH=/opt/homebrew/Cellar/librdkafka/1.9.1/lib
# The next line updates PATH for poetry
export PATH="/Users/peterbraden/.local/bin:$PATH"


if [ -x "$(command -v pyenv)" ]; then
  # The next line updates PATH for poetry
  export PATH="/Users/peterbraden/.local/bin:$PATH"

  # PYENV
  export PYENV_ROOT="$HOME/.pyenv"
  command -v pyenv >/dev/null || export PATH="$PYENV_ROOT/bin:$PATH"
  eval "$(pyenv init -)"

  # >>> conda initialize >>>
  # !! Contents within this block are managed by 'conda init' !!
  __conda_setup="$('/Users/peterbraden/mambaforge/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
  if [ $? -eq 0 ]; then
      eval "$__conda_setup"
  else
      if [ -f "/Users/peterbraden/mambaforge/etc/profile.d/conda.sh" ]; then
          . "/Users/peterbraden/mambaforge/etc/profile.d/conda.sh"
      else
          export PATH="/Users/peterbraden/mambaforge/bin:$PATH"
      fi
  fi
  unset __conda_setup
  # <<< conda initialize <<<
fi
