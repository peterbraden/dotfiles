W="\033[01;37m"
B="\033[30;44m"
BB="\033[34m"
Y="\033[30;43m"
YY="\033[33m"
R="\033[30;41m"
X="\033[0m"

IPADDR=$(ifconfig | awk '($1 == "inet") && ($2 !~ /127.0.0.1/) { print $2 }' | sed 's/addr\://' | tail -1)

echo  "$B              $Y        $USER@$(uname -n)      $R            $IPADDR        $X"
echo "# $(uname -srvm)"
echo "#$(uptime)"

echo "$BB# --- tmux sessions: --- $X"
echo "$(tmux list-sessions)"
