set -g utf8
set-window-option -g utf8 on
set -g default-terminal "screen-256color"

set -g prefix C-a
unbind C-b
bind C-a send-prefix

set-option -g default-command $SHELL

# Integrate with clipboard
#set-option -g default-command "reattach-to-user-namespace -l zsh"
#set-window-option -g automatic-rename on

# Same as screen ctrl-a-a
bind-key C-a last-window
# beginning of line
bind a send-prefix


bind r source-file ~/.tmux.conf; display "Reloaded!"

# Necessary for scroll
set -g mode-mouse on


set-option -g message-bg black
set-option -g message-fg green

set-option -g status-bg black
set -g window-status-bg black
set -g window-status-fg colour244
set-window-option -g window-status-attr dim
set-window-option -g window-status-current-fg red
setw -g window-status-activity-bg black
setw -g window-status-activity-fg yellow
set-window-option -g window-status-activity-attr none
set -g status-right-length 100
set -g status-right "#[fg=black,bg=blue] #S #[fg=black,bg=yellow] #(whoami)@#h #[fg=black,bg=red] #(ifconfig | awk '$1 == \"inet\" { print $2 }'|tail -1) "
set -g status-left ""
